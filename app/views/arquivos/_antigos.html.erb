<div class="row justify-content-center">
  <h3>Profissionais Contratados a Mais de 1 Ano</h3>
  <div class="row ">
    <div class="col-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Token</th>
            <th>Data Admiss√£o</th>
            <th>Saldo</th>
          </tr>
        </thead>
          
        <tbody>
          <% @funcionariosAntigos.each do |funcionario| %>
            <tr>
              <td><%= "#{ funcionario.name } #{ funcionario.surname }" %></td>
              <td><%= funcionario.email %></td>
              <td><%= funcionario.token %></td>
              <td><%= funcionario.admission_date.strftime('%d/%m/%Y') %></td>
              <td><%= number_to_currency(funcionario.available_amount, locale: :"pt-BR") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @funcionariosAntigos, param_name: :antigo %>
</div>